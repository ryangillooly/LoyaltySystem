{
	"info": {
		"_postman_id": "rewards-collection",
		"name": "LoyaltySystem - Rewards",
		"description": "API endpoints for managing loyalty program rewards",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get All Program Rewards",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/rewards/program/{{program_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "rewards", "program", "{{program_id}}"]
				},
				"description": "Get all rewards for a specific loyalty program"
			}
		},
		{
			"name": "Get Active Program Rewards",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/rewards/program/{{program_id}}/active",
					"host": ["{{base_url}}"],
					"path": ["api", "rewards", "program", "{{program_id}}", "active"]
				},
				"description": "Get active rewards for a specific loyalty program"
			}
		},
		{
			"name": "Get Reward by ID",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/rewards/{{reward_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "rewards", "{{reward_id}}"]
				},
				"description": "Get a specific reward by its ID"
			}
		},
		{
			"name": "Get Reward Analytics",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/rewards/{{reward_id}}/analytics",
					"host": ["{{base_url}}"],
					"path": ["api", "rewards", "{{reward_id}}", "analytics"]
				},
				"description": "Get analytics for a specific reward"
			}
		},
		{
			"name": "Get Program Rewards Analytics",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/rewards/program/{{program_id}}/analytics",
					"host": ["{{base_url}}"],
					"path": ["api", "rewards", "program", "{{program_id}}", "analytics"]
				},
				"description": "Get analytics for all rewards in a program"
			}
		},
		{
			"name": "Create Reward",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"title\": \"Free Coffee\",\n    \"description\": \"Get a free coffee after collecting 10 stamps\",\n    \"requiredStamps\": 10,\n    \"requiredPoints\": 0,\n    \"startDate\": \"2024-01-01T00:00:00Z\",\n    \"endDate\": \"2024-12-31T23:59:59Z\",\n    \"isActive\": true\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/rewards/program/{{program_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "rewards", "program", "{{program_id}}"]
				},
				"description": "Create a new reward for a loyalty program"
			}
		},
		{
			"name": "Update Reward",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"title\": \"Updated Free Coffee\",\n    \"description\": \"Get a free coffee after collecting 8 stamps\",\n    \"requiredStamps\": 8,\n    \"requiredPoints\": 0,\n    \"startDate\": \"2024-01-01T00:00:00Z\",\n    \"endDate\": \"2024-12-31T23:59:59Z\",\n    \"isActive\": true\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/rewards/{{reward_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "rewards", "{{reward_id}}"]
				},
				"description": "Update an existing reward"
			}
		},
		{
			"name": "Delete Reward",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/rewards/program/{{program_id}}/reward/{{reward_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "rewards", "program", "{{program_id}}", "reward", "{{reward_id}}"]
				},
				"description": "Delete (deactivate) a reward"
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:5000"
		}
	],
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{access_token}}",
				"type": "string"
			}
		]
	}
} 